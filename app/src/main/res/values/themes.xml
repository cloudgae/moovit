    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/notosanskr_bold</item>
        <item name="android:textSize">15sp</item> <!-- 원하는 텍스트 크기로 변경합니다. -->
        <item name="android:textColor">#FFFFFF</item> <!-- 원하는 텍스트 색상으로 변경합니다. -->
    </style>

    <style name="CustomProgressBarStyle1" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/keyword_review1</item>
    </style>

    <style name="CustomProgressBarStyle2" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/keyword_review2</item>
    </style>

    <style name="CustomProgressBarStyle3" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/keyword_review3</item>
    </style>

    <style name="ApplyButton">
        <item name="android:backgroundTint">#313131</item>
        <item name="android:textColor">@color/white</item> <!-- 원하는 텍스트 색상을 설정합니다 -->
        <!-- 다른 버튼 속성들을 필요에 따라 추가할 수 있습니다 -->
    </style>






</resources>