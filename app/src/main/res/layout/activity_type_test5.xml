<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.TypeTest_5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <ProgressBar
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:max="100"
            android:progress="16"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떤 분위기의 클래스를\n더 선호하시나요?"
            android:textSize="25dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="40dp"/>


        <RadioGroup
            android:id="@+id/rbg_T5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbT5_cheer"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="  서로 응원해주고 화이팅 넘치는 분위기"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:button="@null"
                android:drawableLeft="@drawable/circle"
                android:background="@drawable/selector_radio_button"/>

            <RadioButton
                android:id="@+id/rbT5_concentrate"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="  수업에 집중할 수 있는 분위기"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:padding="20dp"
                android:button="@null"
                android:drawableLeft="@drawable/circle"
                android:background="@drawable/selector_radio_button"/>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>