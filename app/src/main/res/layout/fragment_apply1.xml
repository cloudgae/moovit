<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:text="클래스 내용"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="1Day Class 1~5명 단체레슨 기본 2시간 수업으로 사당역 근처에서 레슨 진행되며 , 스트레칭 후 안무진행합니다 수강생분들에게 난이도를 맞춰 레슨 진행합니다
"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="️방송댄스 KPOP 한번도 배워보지 않으신분들 추천드립니다 진도는 빠르게 나가지 않으며 디테일 및 수강생 한 분 한 분께 신경쓰면서 나갈 예정입니다 레슨 끝난 후 영상촬영있습니다"
                android:textSize="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/apply1_button"
                android:fontFamily="@font/notosanskr_regular"
                android:padding="0dp"
                android:text="상세정보 더 보기"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:text="튜터 소개"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="튜터 이름"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="댄서 대학원 6주 과정 수료\n서울여자대학교 무용학과 졸업\n
댄스 자격증 1급 취득"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="안녕하세요 튜터 ~~입니다.\n
춤을 사랑하고 춤을 좋아하는 사람들과 함께 있는 시간을 소중히 여기겠습니다 :)"
                android:textSize="12dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>