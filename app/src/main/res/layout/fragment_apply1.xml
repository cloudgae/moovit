<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:fillViewport="true"
    android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="클래스 내용"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="1Day Class 1~5명 단체레슨 기본 2시간 수업으로 사당역 근처에서 레슨 진행되며 , 스트레칭 후 안무진행합니다 수강생분들에게 난이도를 맞춰 레슨 진행합니다
"
                    android:textSize="12dp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/notosanskr_regular"-->
<!--                    android:text="️방송댄스 KPOP 한번도 배워보지 않으신분들 추천드립니다 진도는 빠르게 나가지 않으며 디테일 및 수강생 한 분 한 분께 신경쓰면서 나갈 예정입니다 레슨 끝난 후 영상촬영있습니다"-->
<!--                    android:textSize="12dp" />-->

                <Button
                    style="@style/ApplyButton"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:padding="0dp"
                    android:text="상세정보 더 보기"
                    android:textSize="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="클래스 미리보기"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/thumb"
                    android:layout_width="320dp"
                    android:layout_height="180dp"
                    android:layout_marginBottom="50dp"
                    android:background="@drawable/class_ex" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1D1D1D">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="20dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_bold"
                    android:text="강사 소개"
                    android:textSize="15dp" />
                    
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    
                    <ImageView
                        android:id="@+id/dancer_profile"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@drawable/profile_image"/>


                    <TextView
                        android:id="@+id/dancer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:layout_marginLeft="10dp"
                        android:text="강사 이름"
                        android:layout_gravity="center"
                        android:includeFontPadding="false"
                        android:textSize="12dp" />
                    
                    
                </LinearLayout>

                <TextView
                    android:id="@+id/dancer_career"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/notosanskr_regular"
                    android:text="- 댄서 대학원 6주 과정 수료\n- 서울여자대학교 무용학과 졸업\n- 댄스 자격증 1급 취득"
                    android:textSize="12dp" />

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:fontFamily="@font/notosanskr_regular"-->
<!--                    android:text="안녕하세요 튜터 ~~입니다.\n춤을 사랑하고 춤을 좋아하는 사람들과 함께 있는 시간을 소중히 여기겠습니다 :)"-->
<!--                    android:textSize="12dp"-->
<!--                    android:layout_marginBottom="20dp"/>-->

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이런 클래스는 어떠세요?"
                    android:layout_marginBottom="5dp"
                    android:textSize="16dp"/>
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:background="#D9D9D9"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="8dp"
                        android:textColor="#707070"
                        android:includeFontPadding="false"
                        android:layout_marginVertical="5dp"
                        android:text="원데이/공릉동"/>

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:textSize="11dp"
                        android:includeFontPadding="false"
                        android:layout_marginBottom="3dp"
                        android:text="보이그룹 안무 클래스"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:textColor="#707070"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_bold"
                        android:text="52,000원"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>
</androidx.core.widget.NestedScrollView>