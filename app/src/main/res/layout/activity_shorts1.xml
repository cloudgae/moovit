    <!--클래스 상세 정보 -->
    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:backgroundTint="#CCCCCC"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/dance_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"></LinearLayout>

                <LinearLayout
                    android:id="@+id/dancer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/black"
                    android:orientation="horizontal"></LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <!-- 수정: 텍스트를 중앙으로 정렬 -->


            <TextView
                android:id="@+id/hashtag1"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hashtag_box"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hashtag2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hashtag_box2"
                android:fontFamily="@font/notosanskr_regular"
                android:padding="0dp"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/profile_image" />

                <TextView
                    android:id="@+id/classinfo_name"
                    android:layout_width="200dp"
                    android:layout_height="70dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="center|left"
                    android:padding="0dp"
                    android:singleLine="false"
                    android:text="에스파 안무 클래스 "
                    android:textColor="#FFFFFF"
                    android:textSize="20dp" />

                <Button
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="10dp"
                    android:background="@drawable/likebutton"
                    />

            </LinearLayout>



    </LinearLayout>


    <!-- VideoView를 사용하여 동영상 재생 화면을 추가 -->



</FrameLayout>


