<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".onboarding.TypeTest_9">

    <!--    자바에서 컨트롤 해야 하는 항목들에는 아이디 추가
            (현재는 임의의 아이디명, 필요에 따라 변경)-->
    <LinearLayout
        android:id="@+id/typelayer"
        android:layout_width="match_parent"
        android:layout_height="356dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#000000"
        android:layout_marginHorizontal="20dp"
        android:layout_gravity="center">

        <!--    유형 이름 데이터베이스에서 받아와 변경(자바파일에서 컨트롤)-->

        <TextView
            android:id="@+id/typename"
            android:layout_width="168dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="330dp"
            android:fontFamily="@font/notosanskr_bold"
            android:text=" "
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:background="@drawable/typenameview" />
    </LinearLayout>

    <!--        <TextView-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_marginTop="20dp"-->
    <!--            android:text="이런 특성이 있어요" />-->

    <!--    1.추후 background (배경)설정하기
            2.visibility 속성 => invisible로 설정해놓고
            자바에서 '유형의 특성' 데이터를 받아와 텍스트 내용 변경하고 visible로 변경-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center">

        <TextView
            android:id="@+id/typefeature1"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_radio_button"
            android:drawableLeft="@drawable/star2"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:padding="12dp"
            android:text=""
            android:textColor="@drawable/selector_radio_text"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="false" />

        <TextView
            android:id="@+id/typefeature2"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_radio_button"
            android:drawableLeft="@drawable/star2"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:padding="12dp"
            android:text=""
            android:textColor="@drawable/selector_radio_text"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="false"/>

        <TextView
            android:id="@+id/typefeature3"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/selector_radio_button"
            android:drawableLeft="@drawable/star2"
            android:fontFamily="@font/notosanskr_regular"
            android:gravity="center|left"
            android:padding="12dp"
            android:text=""
            android:textColor="@drawable/selector_radio_text"
            android:textSize="15dp"
            android:layout_marginHorizontal="10dp"
            android:singleLine="false"/>

    </LinearLayout>
