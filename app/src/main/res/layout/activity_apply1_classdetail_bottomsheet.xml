<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    tools:context=".apply.Apply1_bottomsheet">

    <LinearLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#2F2F2F"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/top_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/home_indicator"
                android:contentDescription="homeindicator"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_bold"
                android:text="클래스 상세정보"
                android:textSize="15dp"
                android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="클래스 내용"
                android:layout_marginTop="0dp"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="1Day Class 1~5명 단체레슨 기본 2시간 수업으로 사당역 근처에서 레슨 진행되며 , 스트레칭 후 안무진행합니다 수강생분들에게 난이도를 맞춰 레슨 진행합니다
"
                android:textSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="️방송댄스 KPOP 한번도 배워보지 않으신분들 추천드립니다 진도는 빠르게 나가지 않으며 디테일 및 수강생 한 분 한 분께 신경쓰면서 나갈 예정입니다 레슨 끝난 후 영상촬영있습니다"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/whiteline2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:fontFamily="@font/notosanskr_medium"
                android:text="이런 분들에게 추천해요"
                android:textSize="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="️✔️  예쁜 춤선을 만들고 싶으신 분\n✔️  춤을 한 번도 배워보지 않았지만 관심 있는 분\n✔️  새로운 시도를 해보고 싶으신 분 \n✔️  즐겁게 운동하고 싶으신 분"
                android:textSize="12dp"
                android:layout_marginBottom="5dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/whiteline2"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_medium"
                android:text="클래스 커리큘럼"
                android:layout_marginTop="10dp"
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="30dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="168dp"
                    android:background="@drawable/checklist"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:text="먼저 몸이 다치지 않게 몸 풀기 스트레칭이 진행됩니다."
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:layout_marginTop="5dp"
                        android:text="수업 안무 중 어려울 것 같은 동작을 미리 배우면서\n숙지를 합니다. "
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:layout_marginTop="5dp"
                        android:text="음악 속도를 조절하여 기존 속도와 느린 속도를 반복하여\n음악과 안무가 매칭이 되도록 도와줍니다."
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanskr_regular"
                        android:layout_marginTop="5dp"
                        android:text="먼저 몸이 다치지 않게 몸 풀기 스트레칭이 진행됩니다."
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>