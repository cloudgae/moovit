<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onboarding.TypeTest_6"
    android:orientation="vertical"
    android:background="#000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:max="100"
            android:progress="80"
            android:progressTint="#EB4EC8"
            android:progressBackgroundTint="#2D2D2D"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="춤을 마지막으로 춰 본 지\n얼마나 되셨나요?"
            android:textSize="22dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#FFFFFF"/>

        <RadioGroup
            android:id="@+id/rbg_T6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rbT6_1"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="3개월 이내"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="20dp"
                android:button="@null"
                android:background="@drawable/selector_radio_button"
                android:fontFamily="@font/notosanskr_regular"/>

            <RadioButton
                android:id="@+id/rbT6_2"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="1년 이내"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="20dp"
                android:button="@null"
                android:background="@drawable/selector_radio_button"
                android:fontFamily="@font/notosanskr_regular"/>

            <RadioButton
                android:id="@+id/rbT6_3"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="1년 ~ 3년"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="20dp"
                android:button="@null"
                android:background="@drawable/selector_radio_button"
                android:fontFamily="@font/notosanskr_regular"/>

            <RadioButton
                android:id="@+id/rbT6_4"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="3년 이상"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="20dp"
                android:button="@null"
                android:background="@drawable/selector_radio_button"
                android:fontFamily="@font/notosanskr_regular"/>

            <RadioButton
                android:id="@+id/rbT6_5"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:text="춰본 적이 없어요"
                android:textSize="18dp"
                android:textColor="@drawable/selector_radio_text"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="20dp"
                android:paddingLeft="20dp"
                android:button="@null"
                android:background="@drawable/selector_radio_button"
                android:fontFamily="@font/notosanskr_regular"/>

        </RadioGroup>
    </LinearLayout>

</LinearLayout>