<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".mypage.MyTypeInfo">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.widget.Button
            android:id="@+id/goback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginVertical="15dp"
            android:background="@drawable/white_arrow"
            android:gravity="left"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center"
            android:text="내 유형 보기"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/typelayer"
                android:layout_width="match_parent"
                android:layout_height="356dp"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_weight="1"
                android:background="#000000"
                android:orientation="vertical">

                <!--    유형 이름 데이터베이스에서 받아와 변경(자바파일에서 컨트롤)-->

                <TextView
                    android:id="@+id/typename"
                    android:layout_width="168dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="300dp"
                    android:background="@drawable/typenameview"
                    android:fontFamily="@font/notosanskr_bold"
                    android:gravity="center"
                    android:text=" "
                    android:textColor="#FFFFFF"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/typefeature1"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableLeft="@drawable/star2"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="center|left"
                    android:padding="12dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@drawable/selector_radio_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/typefeature2"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableLeft="@drawable/star2"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="center|left"
                    android:padding="12dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@drawable/selector_radio_text"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/typefeature3"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableLeft="@drawable/star2"
                    android:fontFamily="@font/notosanskr_regular"
                    android:gravity="center|left"
                    android:padding="12dp"
                    android:singleLine="false"
                    android:text=""
                    android:textColor="@drawable/selector_radio_text"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>