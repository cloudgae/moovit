<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".Apply_C7">

    <!-- 상단 고정 부분 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            app:srcCompat="@drawable/back_key"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="275dp"
            android:layout_marginVertical="10dp"/>


    </LinearLayout>


    <!-- 스크롤 가능한 영역 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ImageView -->
            <androidx.cardview.widget.CardView
                android:layout_width="320dp"
                android:layout_height="200dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/c7image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/thumbnail"
                    android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/c7name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosanskr_medium"
                android:includeFontPadding="false"
                android:text="에스파 타이틀곡 클래스  "
                android:textSize="22dp"
                android:drawableRight="@drawable/studentdday1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:numStars="5"
                    android:progressBackgroundTint="@color/white"
                    android:progressTint="#E87FEA"
                    android:rating="0"
                    android:stepSize="0.5" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:includeFontPadding="false"
                    android:text="0(0)"
                    android:textColor="#E87FEA"
                    android:textSize="12dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c7genre"
                    android:layout_width="155dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableTop="@drawable/genre_icon"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text="K-POP"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/c7diff"
                    android:layout_width="155dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableTop="@drawable/icon_diff"
                    android:drawablePadding="0dp"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text="입문 난이도"
                    android:textSize="11dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/c7day"
                    android:layout_width="155dp"
                    android:layout_height="78dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableTop="@drawable/icon_day"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text="원데이 클래스"
                    android:textSize="11dp" />

                <TextView
                    android:id="@+id/c7loc"
                    android:layout_width="155dp"
                    android:layout_height="78dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/selector_radio_button"
                    android:drawableTop="@drawable/icon_day"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:padding="10dp"
                    android:text="노원구 공릉동"
                    android:textSize="11dp" />
            </LinearLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                app:tabBackground="@drawable/tab_background"
                app:tabIndicatorColor="#FFFFFF"
                app:tabSelectedTextColor="#FFFFFF"
                app:tabTextAppearance="@style/NotoSansRegularTabStyle"
                app:tabTextColor="#707070" />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="600dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 하단 고정 부분 -->
    <LinearLayout
        android:id="@+id/pricebar"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#313131"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/c7price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/notosanskr_medium"
            android:text="33,000원"
            android:textSize="22dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/apply_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/newapplybtn" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_menu"
        style="@style/MyBottomNavigationView" />
</LinearLayout>