<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#000000"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:columnCount="2"
            android:rowCount="2">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="horizontal">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/playerCardView1"
                        android:layout_width="154dp"
                        android:layout_height="220dp"
                        app:cardCornerRadius="10dp">

                        <com.google.android.exoplayer2.ui.PlayerView
                            android:id="@+id/player_view1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/playerCardView2"
                        android:layout_width="154dp"
                        android:layout_height="220dp"
                        android:layout_marginLeft="10dp"
                        app:cardCornerRadius="10dp">

                        <com.google.android.exoplayer2.ui.PlayerView
                            android:id="@+id/player_view2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="185dp"
                    android:layout_marginLeft="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#걸스힙합"
                        android:textColor="#000000"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#챌린지"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textSize="12dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="185dp"
                    android:layout_marginLeft="176dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#걸스힙합"
                        android:textColor="#000000"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#챌린지"
                        android:textColor="#000000"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:textSize="12dp"/>
                </LinearLayout>



            </FrameLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp"
                android:layout_gravity="center"
                android:layout_row="1"
                android:layout_column="0"
                android:orientation="horizontal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/playerCardView3"
                    android:layout_width="154dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="10dp">

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/player_view3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/playerCardView4"
                    android:layout_width="154dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="10dp"
                    app:cardCornerRadius="10dp">

                    <com.google.android.exoplayer2.ui.PlayerView
                        android:id="@+id/player_view4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </GridLayout>
    </ScrollView>
</LinearLayout>