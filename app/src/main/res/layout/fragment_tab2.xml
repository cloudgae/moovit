<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="0"
            android:layout_gravity="center"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/hashtag1"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hashtag_box"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center"
                android:layout_gravity="center"
                android:padding="0dp"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hashtag2"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hashtag_box2"
                android:fontFamily="@font/notosanskr_regular"
                android:padding="0dp"
                android:textColor="@drawable/selector_radio_text"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">



                <Button
                    android:id="@+id/dancer_profile"
                    android:layout_width="270dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/profile_image" />

                    <TextView
                        android:id="@+id/classinfo_name"
                        android:layout_width="170dp"
                        android:layout_height="70dp"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/notosanskr_bold"
                        android:gravity="center|left"
                        android:padding="0dp"
                        android:singleLine="false"
                        android:text="에이미"
                        android:textColor="#FFFFFF"
                        android:textSize="20dp" />
                </LinearLayout>



            </FrameLayout>



<!--            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/profile_image" />

            <TextView
                android:id="@+id/classinfo_name"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanskr_regular"
                android:gravity="center|left"
                android:padding="0dp"
                android:singleLine="false"
                android:text="바다 BADA"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />-->

            <android.widget.Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/like_button"
                android:contentDescription="하고 싶은 설명"
                />

        </LinearLayout>



    </LinearLayout>

</FrameLayout>
